<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".Activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_bg">
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user"
            android:layout_marginTop="30dp"
            android:text="Sports Book"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/logusername"
            android:hint="Email"
            android:textColorHint="#ffffff"
            android:paddingLeft="6dp"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/username"
            android:textColor="#ffffff"
            android:background="@drawable/et_bg"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/logpassword"
            android:hint="Password"
            android:textColorHint="#ffffff"
            android:paddingLeft="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/password"
            android:background="@drawable/et_bg"
            android:textColor="#ffffff"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/logusername"
            android:layout_alignStart="@id/logusername"
            android:layout_below="@id/logusername"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/grad_bg"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="Registration"/>

        <ProgressBar
            android:id="@+id/login_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_login"
            android:layout_alignLeft="@+id/btn_login"
            android:layout_alignTop="@+id/btn_login"
            android:layout_alignEnd="@+id/btn_login"
            android:layout_alignRight="@+id/btn_login"
            android:layout_alignBottom="@+id/btn_login"
            android:layout_marginStart="123dp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="129dp"
            android:layout_marginRight="129dp"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>
</ScrollView>